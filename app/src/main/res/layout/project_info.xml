<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">





        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
             >



            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/image_border"
                    android:orientation="vertical"
                    >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/head_frame"
                    android:paddingBottom="10dp">



                     <TextView
                        android:id="@+id/branchTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:paddingTop="6dp"
                        android:paddingLeft="10dp"
                        android:text="Project:  "
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/white"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/branchName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:text="Project Information  "
                        android:textColor="@android:color/white"
                        android:textStyle="normal" />

                </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <ImageView
        android:id="@+id/imageView_folder"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="bottom"
        android:foreground="@drawable/folder2_red" />

    <TextView
        android:id="@+id/folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Project Folder TABS  "
        android:layout_gravity="center"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

</LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/fragment_folder"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <fragment
                        android:id="@+id/tree_fragment"
                        android:name="com.forcemanage.inspect.MapViewFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <fragment
                        android:id="@+id/detail_text"
                        android:name="com.forcemanage.inspect.DetailFragment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom">

                    <Button
                        android:id="@+id/addTab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="#DFB005"
                        android:text="Add"
                        android:textSize="11sp"
                        android:drawableStart="@drawable/ic_text_box_plus_outline"

                        />

                    <Button
                        android:id="@+id/delTab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:backgroundTint="#DFB005"
                        android:text="Delete"
                        android:textSize="11sp"
                        android:drawableLeft="@drawable/ic_delete_24px"
                        />



                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_border"
                android:orientation="vertical"
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0B2459"
                        >

                        <ImageView
                            android:id="@+id/imageView_cam"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="bottom|left"
                            android:layout_marginTop="10dp"
                            android:saveEnabled="false"
                            app:srcCompat="@android:drawable/ic_menu_camera" />

                        <ImageView
                            android:id="@+id/imageView_file"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="100dp"
                            android:layout_gravity="right"
                            android:foreground="@android:drawable/ic_menu_gallery" />

                        <ImageView
                            android:id="@+id/imageView_info"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="bottom|right"
                            android:layout_marginTop="10dp"
                            android:saveEnabled="false"
                            app:srcCompat="@android:drawable/ic_menu_info_details" />
                    </FrameLayout>

                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="true"
                        android:cropToPadding="false"
                        android:layout_marginTop="5dp"
                        android:padding="3dp"
                        app:srcCompat="@drawable/ic_camera"
                        ></ImageView>


                </FrameLayout>


                <ScrollView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/Service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="25dp"
                            android:text="Project Name:  "
                            android:textColor="@android:color/black"
                            android:textStyle="normal|bold" />


                        <TextView
                            android:id="@+id/Text1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="10dp"
                            android:hint="Project Title - Eg. Project Address/Project name/ etc"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/infotitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"
                            android:paddingLeft="10dp"
                            android:text="Project Information:  "
                            android:textColor="@android:color/black"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/Text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Project Note "
                            android:textColor="@android:color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/Text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Project Note"
                            android:textColor="@android:color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/Text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Project Note"
                            android:textColor="@android:color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/Text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Project Note"
                            android:textColor="@android:color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/Text6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Project Note"
                            android:textColor="@android:color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/Text7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Project Note"
                            android:textColor="@android:color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/Text8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:text="Project Note "
                            android:textColor="@android:color/black"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/Text9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:text="Project Note "
                            android:textColor="@android:color/black"
                            android:textStyle="normal" />


                        <TextView
                            android:id="@+id/notetitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:paddingLeft="10dp"
                            android:text="Project Notes:  "
                            android:textColor="@android:color/black"
                            android:textStyle="normal|bold" />



                        <EditText
                            android:id="@+id/note"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="10dp"
                            android:hint="Author notes (text not printed)"
                            android:textColor="@color/cardview_shadow_start_color"
                            android:textSize="16sp"/>



                    </LinearLayout>



                </ScrollView>




            </LinearLayout>


    </LinearLayout>




</RelativeLayout>


