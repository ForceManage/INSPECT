<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.forcemanage.inspect.InspectionActivity">




        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
             >

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/image_border"
                    android:orientation="vertical"
                    >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/head_frame"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Activity MAP branch "
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                 android:text="Item Title:  "
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_marginBottom="5dp"
                android:textStyle="normal|bold" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Item Title:  "
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="0.7">

                    <TextView
                        android:id="@+id/Service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="25dp"
                        android:text="Map branch name:  "
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />


                    <TextView
                        android:id="@+id/Text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="10dp"
                        android:hint="Project Map Branch Name - "
                        android:textSize="16sp"/>



                <TextView
                    android:id="@+id/noteHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Notes:  "
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:hint="Descriptive notes here"
                    android:textSize="16sp"/>
            </LinearLayout>




                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="bottom">



                </FrameLayout>

            </LinearLayout>



            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginRight="5dp"
                android:background="@drawable/edit_border"
                android:orientation="vertical"
                >



                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#0B2459"
                       >

                        <ImageView
                            android:id="@+id/imageView_cam"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:paddingLeft="2dp"
                            android:paddingTop="2dp"
                            android:paddingRight="2dp"
                            android:paddingBottom="2dp"
                            android:layout_margin="2dp"
                            android:layout_gravity="top|left"
                            app:srcCompat="@android:drawable/ic_menu_camera" />

                        <ImageView
                            android:id="@+id/imageView_draw"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="top|right"
                            android:visibility="visible"
                            android:foreground="@android:drawable/ic_menu_edit" />

                    </FrameLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    >


                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        app:srcCompat="@drawable/ic_camera" />



                    <ImageView
                        android:id="@+id/imageView_file"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="10dp"
                        android:foreground="@android:drawable/ic_menu_gallery" />



                 </FrameLayout>
                </LinearLayout>

            </LinearLayout>


    </LinearLayout>




</RelativeLayout>


