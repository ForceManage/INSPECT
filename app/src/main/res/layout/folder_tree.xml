<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">





    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_border"
            android:orientation="vertical"
            android:weightSum="1"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/head_frame"
                android:paddingBottom="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_folder"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="left"
                        android:foreground="@drawable/documents" />

                    <TextView
                        android:id="@+id/branchTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:paddingTop="6dp"
                        android:paddingLeft="5dp"
                        android:text="Folder:  "
                        android:textSize="16sp"
                        android:layout_marginBottom="5dp"
                        android:textColor="@android:color/white"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:id="@+id/branchName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="50dp"
                        android:layout_gravity="bottom"
                        android:text="Document Titles  "
                        android:textColor="@android:color/white"
                        android:textStyle="normal" />

                </FrameLayout>



            </LinearLayout>



                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/fragment_folder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/image_border"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:paddingTop="5dp"
                        android:layout_marginBottom="7dp"
                        android:backgroundTint="@color/light"
                        android:orientation="horizontal"
                        >

                        <fragment
                            android:id="@+id/tree1_fragment"
                            android:name="com.forcemanage.inspect.ProjectViewFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginTop="5dp"
                            />

                        <fragment
                            android:id="@+id/detail1_text"
                            android:name="com.forcemanage.inspect.DetailProjectFragment"
                            android:layout_width="0dp"
                            android:layout_height="0dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:background="@color/light"
                        android:orientation="vertical"
                        >

                    </LinearLayout>



                </LinearLayout>




        </LinearLayout>







</RelativeLayout>