<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.forcemanage.inspect.MainActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:layout_marginRight="5dp"
        android:paddingRight="5dp"
        android:weightSum="1"
        android:background="@drawable/edit_border">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:layout_gravity="center"

            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_camera" />

            <ImageView
                android:id="@+id/photo_insert"
                android:layout_width="300dp"
                android:adjustViewBounds="true"
                android:layout_height="200dp"
                android:layout_gravity="top|left"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@drawable/photo_frame" />


        </FrameLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            android:padding="3dp"
            android:background="@drawable/image_border">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cameraClick"
                android:layout_height="match_parent"
                android:layout_width="120dp"
                android:cropToPadding="false"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="2dp"
                android:layout_margin="2dp"
                android:background="@drawable/edit_border"
                app:srcCompat="@drawable/ic_add_a_photo_24px_outline" />

                <ImageView
                    android:id="@+id/imageView_file"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginLeft="140dp"
                    android:layout_gravity="left"
                    android:background="@drawable/edit_border"
                    android:foreground="@android:drawable/ic_menu_gallery" />

                <ImageView
                    android:id="@+id/Close"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:cropToPadding="false"
                    android:paddingLeft="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginRight="150dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/edit_border"
                    app:srcCompat="@drawable/close" />

            <ImageView
                android:id="@+id/Save"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:cropToPadding="false"
                android:paddingLeft="2dp"
                android:paddingTop="2dp"
                android:paddingRight="2dp"
                android:paddingBottom="2dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/edit_border"
                app:srcCompat="@drawable/done" />

            </FrameLayout>



        </LinearLayout>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>